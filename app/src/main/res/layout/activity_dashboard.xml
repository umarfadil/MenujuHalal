<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg">

    <!--Banner Atas-->
    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/banner"
        android:scaleType="centerCrop"/>

    <!--Counting Days-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner"
        android:layout_marginLeft="@dimen/padding_16"
        android:layout_marginRight="@dimen/padding_16"
        android:layout_marginTop="-32dp"
        app:cardCornerRadius="@dimen/padding_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textSize="48sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dayâ€™s left until the big days"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/padding_8"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!--Menu Bawah-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/padding_32">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--QR Code-->
            <LinearLayout
                android:id="@+id/ln_qrcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_16">

                <ImageView
                    android:layout_width="@dimen/icons_40"
                    android:layout_height="@dimen/icons_40"
                    android:src="@drawable/barcode"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QR Code"
                    android:paddingTop="@dimen/padding_8"
                    android:textSize="18sp"/>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark"
                android:layout_marginLeft="@dimen/padding_32"/>

            <!--Save the Date-->
            <LinearLayout
                android:id="@+id/ln_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_16">

                <ImageView
                    android:layout_width="@dimen/icons_40"
                    android:layout_height="@dimen/icons_40"
                    android:src="@drawable/calendar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Where"
                    android:paddingTop="@dimen/padding_8"
                    android:textSize="18sp" />
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:contentDescription="separator"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--Timeline-->
            <LinearLayout
                android:id="@+id/ln_timeline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_16">

                <ImageView
                    android:layout_width="@dimen/icons_40"
                    android:layout_height="@dimen/icons_40"
                    android:src="@drawable/timeline" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timeline"
                    android:paddingTop="@dimen/padding_8"
                    android:textSize="18sp"/>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark"
                android:layout_marginRight="@dimen/padding_32"/>

            <!--Doa-->
            <LinearLayout
                android:id="@+id/ln_doa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_16">

                <ImageView
                    android:layout_width="@dimen/icons_40"
                    android:layout_height="@dimen/icons_40"
                    android:src="@drawable/doa"
                    android:paddingTop="@dimen/padding_8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doa"
                    android:paddingTop="@dimen/padding_8"
                    android:textSize="18sp" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
